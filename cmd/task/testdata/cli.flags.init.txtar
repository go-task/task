# Test: task init
task --init
exists Taskfile.yml
stdout 'Taskfile created: Taskfile.yml'
cmp Taskfile.yml expect

# Test: taskfile exists, content not modified
exec sh -c 'echo "foo" > Taskfile.yml'
! task --init
exists Taskfile.yml
stderr 'task: A Taskfile already exists'
exec cat Taskfile.yml
stdout 'foo'


